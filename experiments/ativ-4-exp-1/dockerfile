FROM debian:latest

LABEL Henrique Soares <henricsoares@gmail.com>

ADD . .

RUN cd gromacs-mo833a/build; \
apt-get update; \
apt-get --assume-yes install build-essential cmake valgrind linux-perf; \
apt-get clean; \
cmake ..  -DGMX_BUILD_OWN_FFTW=ON; \
# cmake .. -DGMX_BUILD_OWN_FFTW=ON; 
make; make install; \
chmod +x /usr/local/gromacs/bin/gmx

ENV PATH=$PATH:/usr/local/gromacs/bin
